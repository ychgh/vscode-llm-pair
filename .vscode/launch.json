{
  // For local development, copy this file to launch.local.json and add your API key there
  // launch.local.json is gitignored and won't be committed
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/test-workspace"
      ],
      "env": {
        "VSCODE_LLMPAIR_OPENAI_APIKEY": ""
      },
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
